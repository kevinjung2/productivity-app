<% if @item.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @item do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :category %><br>
  <%= f.collection_radio_buttons :category_id, @categories, :id, :name %>
  <%= f.submit %>
<% end %>
