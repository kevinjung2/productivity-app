<h1>Sign in Below</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%=form_for @user, url: '/login' do |f| %>
  <%=f.label :name%>
  <%=f.text_field :name%><br>
  <%=f.label :password%>
  <%=f.password_field :password%><br>
  <%=f.submit "Sign In"%>
<%end%>
<h4>OR:</h4>
<%= link_to('Log in with Facebook!', '/auth/facebook') %>
