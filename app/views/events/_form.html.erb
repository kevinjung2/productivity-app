<%=form_for @event, url: post_url do |f| %>
  <%=f.hidden_field :host_id, value: @user.id%>
  <%=f.label :name%>
  <%=f.text_field :name%><br>
  <%=f.label :location%>
  <%=f.text_field :location%><br>
  <%=f.label :time%>
  <%=f.datetime_field :time, min: DateTime.current.noon%><br>
  <%=f.collection_check_boxes :user_ids, @users, :id, :name%>
  <%=f.submit%>
<%end%>
